<ModOps>

<!-- # Modular Fertiliser Factory -->
<!-- Buff Distance -->
    <ModOp Type="replace" GUID="24805" Path="/Values/BuffFactory/BaseBuffDistance" ModOpID="FertiliserBuffDistance">
        <BaseBuffDistance>20</BaseBuffDistance>
    </ModOp>

    <ImyaTweaks Title="Features of HaciendaOverhaul: Modular Hacienda Fertiliser Works" />
    <ImyaExpose Path="self::BaseBuffDistance" ModOpID="FertiliserBuffDistance" ExposeID="FertiliserWorks_BuffDistance" Description="This value sets the radius of the Buff provided by the Hacienda Fertiliser Works [in tiles]." />

<!-- Cycle Time -->
    <ModOp Type="add" GUID="24805" Path="/Values/FactoryBase" ModOpID="FertiliserCycleTime">
        <CycleTime>30</CycleTime>
    </ModOp>

    <ImyaExpose Path="self::CycleTime" Kind="Enum" ModOpID="FertiliserCycleTime" ExposeID="FertiliserWorks_CycleTime" Description="This value sets the cycle time of the Hacienda Fertiliser Works [in seconds].">
        <FixedValues>
            <Value>30</Value>
            <Value>60</Value>
            <Value>90</Value>
            <Value>120</Value>
        </FixedValues>
    </ImyaExpose>

<!-- Fertilizer Works Industrializable Toggle -->
    <ModOp Type="replace" GUID="24805" Path="/Template" ModOpID="FertiliserIndustrializable">
        <Template>BuffFactoryCultureIndustrializable_Taludas</Template>
    </ModOp>

    <ImyaExpose Path="self::Template" Kind="Toggle" ModOpID="FertiliserIndustrializable" ExposeID="FertiliserWorks_Industrializable" Description="Switch on to enable electricity boost for the Hacienda Fertiliser Works.">
        <AltValue>
            <Template>BuffFactoryCulture</Template>
        </AltValue>    
    </ImyaExpose>

<!-- Internal Storage -->
    <ModOp Type="add" GUID="24805" Path="/Values/FactoryBase">
        <ClampMaxTransporterLogisticCost>1</ClampMaxTransporterLogisticCost>
        <ClampedMaxTransporterLogisticCost>67</ClampedMaxTransporterLogisticCost>
    </ModOp>

    <ModOp Type="replace" GUID="24805" Path="//StorageAmount" ModOpID="FertiliserStorageAmount">
        <StorageAmount>5</StorageAmount>
    </ModOp>

    <ImyaExpose Path="self::StorageAmount" Kind="Slider" ModOpID="FertiliserStorageAmount" ExposeID="FertiliserWorks_InternalStorageAmount" Description="This value sets the internal storage of the Hacienda Fertiliser Works [in tones]. It will not mess with the range of its Transporters.">
        <SliderDefinition Min="1" Max="10" Stepping="1" />
    </ImyaExpose>

<!-- Hacienda Dependent Toggle -->
    <ModOp Type="replace" GUID="24805" Path="/Values/Pausable/IsHaciendaDependent" ModOpID="FertiliserHaciendaDependent">
        <IsHaciendaDependent>1</IsHaciendaDependent>
    </ModOp>

    <ImyaExpose Path="self::IsHaciendaDependent" Kind="Toggle" ModOpID="FertiliserHaciendaDependent" ExposeID="FertiliserWorks_IsHaciendaDependent" Description="Switch off to remove the requirement for the Hacienda Works to be inside the Hacienda Range (If you don't change anything else in this menu, please toggle the switch to 'on' ones, save and then toggle it of again to remove the Hacienda Dependency!)">
        <AltValue>
            <IsHaciendaDependent>0</IsHaciendaDependent>
        </AltValue>    
    </ImyaExpose>

<!-- Modify buff for different amounts of extra goods -->
    <ModOp Type="replace" GUID="24806" Path="/Values/FactoryUpgrade/AdditionalOutput/Item[Product = '24807']/AdditionalOutputCycle" ModOpID="FertiliserAdditionalOutput">
        <AdditionalOutputCycle>3</AdditionalOutputCycle>
    </ModOp>

    <ImyaExpose Path="self::AdditionalOutputCycle" Kind="Slider" ModOpID="FertiliserAdditionalOutput" ExposeID="FertiliserWorks_AdditionalOutputAmountPerCycle" Description="This value sets the ratio of Dung generated by the animal farms in range of the Hacienda Fertiliser Works [in 1/value].">
        <SliderDefinition Min="1" Max="10" Stepping="1" />
    </ImyaExpose>

</ModOps>